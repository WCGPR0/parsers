@model string
@{
    string header = ViewBag.Header;
}

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <!-- /.panel -->
        <!-- DATA FEED -->
        <div class="panel panel-default data-feed">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Report: @header
                <div class="pull-right" style="margin-top:-6px">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-xs" id="submit" type="submit">
                            Publish
                        </button>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="content">
                            Loading... <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                    <!-- /.col-lg-4 (nested) -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- / DATA FEED -->
    </div>
</div>
<!-- /.row -->
<!-- /#page-wrapper -->
<!-- /#wrapper -->

@Styles.Render("~/bundles/quill")
@Scripts.Render("~/Scripts/Quill/quill.js")

<script>
    var quill = new Quill('#content', {
        theme: 'snow',
        modules: {
            toolbar: false
        }
    });

    $(document).ready(function () {
        $("#submit").hide();
        $("#content").html(@Html.Raw(Model));
        quill.disable();
        $(".ql-editor").attr("contenteditable", false);
        });
</script>