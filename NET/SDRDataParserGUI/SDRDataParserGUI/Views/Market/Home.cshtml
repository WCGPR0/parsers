
@{
    ViewBag.Title = "Morning Market Report";
}

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <!-- /.panel -->
        <!-- DATA FEED -->
        <div class="panel panel-default data-feed">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Graph
                <div class="pull-right" style="margin-top:-6px">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-xs" id="submit" type="submit">
                            Publish
                        </button>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="content">Paste Graph here!</div>
                    </div>
                    <!-- /.col-lg-4 (nested) -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- / DATA FEED -->
    </div>
</div>
<!-- /.row -->
<!-- /#page-wrapper -->
<!-- /#wrapper -->
@Styles.Render("~/bundles/quill")
@Scripts.Render("~/Scripts/Quill/quill.js")
@Scripts.Render("~/Scripts/Quill/ImageDrop.js")
@Scripts.Render("~/Scripts/Quill/ImageResize.js")


<script>
    var quill = new Quill('#content', {
        theme: 'snow',
        modules: {
            imageResize: {
                displaySize: true
            },
            imageDrop: true
        }
    });

    $("#submit").click(function () {
        $.post("/Market/Update", {
            data: JSON.stringify($("#content").html())
        });
    });

</script>